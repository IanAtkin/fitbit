  <circle cx="50%" cy="50%" r="130" fill="#111111" />
  
  <mask id="mask">
    <circle cx="50%" cy="50%" r="130" />
  </mask>
  <svg mask="#mask" width="100%" height="100%">
    <gradientRect width="100%" height="100%" fill="black"
      gradient-type="bilinear"
      gradient-x1="20%" gradient-y1="40%"
      gradient-x2="60%" gradient-y2="60%"
      gradient-color2="#111111"
      gradient-color3="#222222"
      gradient-color4="#333333" />
  </svg>

  <arc id="hourRing" x="25" y="25" width="250" height="250" fill="#d70040" arc-width="400" start-angle="0" sweep-angle="0" />
