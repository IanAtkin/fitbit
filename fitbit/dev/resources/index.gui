  <arc id="secondRing" x="25" y="25" width="250" height="250" fill="#f4d03f" arc-width="400" start-angle="0" sweep-angle="0" />

  <arc id="stepRingBase" x="110" y="110" width="80" height="80" fill="#222222" arc-width="10" start-angle="0" sweep-angle="360" />

  <arc id="stepRing10k" x="110" y="110" width="80" height="80" fill="green" arc-width="10" start-angle="0" sweep-angle="0" />
  <arc id="stepRing20k" x="110" y="110" width="80" height="80" fill="blue" arc-width="10" start-angle="0" sweep-angle="0" />
  <arc id="stepRing30k" x="110" y="110" width="80" height="80" fill="purple" arc-width="10" start-angle="0" sweep-angle="0" />

  <text id="theTime"></text>
